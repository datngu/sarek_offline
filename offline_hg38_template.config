profiles {
  saga {
    executor.name        = 'slurm'    // use slurm
    executor.account     = 'nn9114k'  // running account
  }

  tsd {
    executor.name        = 'slurm'
    executor.account     = 'p33'
  }
  // add your HPC setting bellow
  
}


params {
  intervals = "/PATH/TO/gatk_hg38/noALT.bed"

  genomes {
    'HG38_OFFLINE' {
      fasta        = "/PATH/TO/gatk_hg38/Homo_sapiens_assembly38.fasta"
      fai          = "/PATH/TO/gatk_hg38/Homo_sapiens_assembly38.fasta.fai"
      dict         = "/PATH/TO/gatk_hg38/Homo_sapiens_assembly38.dict"
      dbsnp        = "/PATH/TO/gatk_hg38/Homo_sapiens_assembly38.dbsnp138.vcf.gz"
      known_indels = "/PATH/TO/gatk_hg38/Homo_sapiens_assembly38.known_indels.vcf.gz"
      known_snps   = "/PATH/TO/gatk_hg38/Mills_and_1000G_gold_standard.indels.hg38.vcf.gz"
      germline_resource = "/PATH/TO/gatk_hg38/af-only-gnomad.hg38.vcf.gz"
    }
  }
}

